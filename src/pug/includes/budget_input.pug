div.container
  div.row
    div.col-12.col-sm-2.col-lg-1
      mixin formSelect(typeValue, typeCondition)
        option(value= typeValue)= typeCondition
      select.form_input.form_input--type
        +formSelect('inc','+')
        +formSelect('exp','-')
    div.col-12.col-sm-5.col-lg-6
      input.form_input.form_input--description(
        type='text'
        value=''
        placeholder='Description'
      )
    div.col-12.col-sm-3
      input.form_input.form_input--value(
        type='text'
        value=''
        placeholder='Value'
      )
    div.col-12.col-sm-2
      button.form_button
        span Add
        i.far.fa-check-circle
